<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_item_conf"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFF">
    <RelativeLayout
        android:id="@+id/content_item_conf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFF"
        android:paddingTop="15dp"
        android:paddingBottom="15dp">
        <ImageView
            android:id="@+id/ivConfStatus"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="15dp"
            android:src="@drawable/ic_conf_status_running"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/ivConfStatus"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvConfName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:textSize="18dp"
                android:text="会议名称"/>

            <TextView
                android:id="@+id/tvConfTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="14dp"
                android:text="会议时间" />
        </LinearLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/content_item_conf"
        android:background="@color/blue"/>
</RelativeLayout>